<div class="row">
  <div class="col-md-12">
    <h1>投稿</h1>
    <%= form_with model: @post, local: true do |form| %>
    <div class="form-group">
        <%= form.label "本文" %>
        <%= form.text_area :posts, class: "form-control" %>
      </div>
      <%= form.submit '登録する', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>